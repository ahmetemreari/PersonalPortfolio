@using System.Security.Claims
<!DOCTYPE html>
<html lang="tr" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@2.6.0/dist/full.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
@RenderSection("Styles", required: false)
</head>
<body class="bg-base-200">
    <div class="drawer drawer-mobile">
        <input id="admin-drawer" type="checkbox" class="drawer-toggle" />
        
        <!-- Ana İçerik -->
        <div class="drawer-content flex flex-col">
            <!-- Üst Menü -->
            <div class="navbar bg-base-100 shadow-lg lg:hidden">
                <div class="flex-none">
                    <label for="admin-drawer" class="btn btn-square btn-ghost drawer-button">
                        <i class="fas fa-bars text-xl"></i>
                    </label>
                </div>
                <div class="flex-1">
                    <a class="btn btn-ghost normal-case text-xl">
                        <i class="fas fa-shield-alt mr-2"></i>Admin Panel
                    </a>
                </div>
                <div class="flex-none gap-2">
                    <div class="dropdown dropdown-end">
                        <label tabindex="0" class="btn btn-ghost btn-circle avatar">
                            <div class="w-10 rounded-full">
                                <img src="https://api.dicebear.com/6.x/initials/svg?seed=Admin" />
                            </div>
                        </label>
                        <ul tabindex="0" class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-52">
                            <li><a href="/"><i class="fas fa-home mr-2"></i>Ana Sayfa</a></li>
                            <li><a><i class="fas fa-sign-out-alt mr-2"></i>Çıkış Yap</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- İçerik Alanı -->
            <main class="p-6 bg-base-200 min-h-screen">
                @RenderBody()
            </main>
        </div>

        <!-- Yan Menü -->
        <div class="drawer-side">
            <label for="admin-drawer" class="drawer-overlay"></label>
            <aside class="w-80 bg-base-100 text-base-content border-r">
                <!-- Logo Alanı -->
                <div class="p-4 bg-base-100 hidden lg:flex items-center gap-2 border-b">
                    <i class="fas fa-shield-alt text-2xl text-primary"></i>
                    <span class="text-xl font-bold">Admin Panel</span>
                </div>

                <!-- Menü -->
                <ul class="menu p-4 gap-2">
                    <li class="menu-title opacity-50 text-sm font-bold uppercase">
                        <span>Yönetim</span>
                    </li>
                    
                    <li>
                        <a asp-controller="Admin" asp-action="Index" class="flex gap-3 py-3 hover:bg-base-200 rounded-lg transition-all">
                            <i class="fas fa-chart-line text-lg"></i>Dashboard
                        </a>
                    </li>
                    
                    <li>
                        <a asp-controller="Admin" asp-action="About" class="flex gap-3 py-3 hover:bg-base-200 rounded-lg transition-all">
                            <i class="fas fa-user text-lg"></i>Hakkımda
                        </a>
                    </li>
                    
                    <li>
                        <a asp-controller="Admin" asp-action="Services" class="flex gap-3 py-3 hover:bg-base-200 rounded-lg transition-all">
                            <i class="fas fa-cogs text-lg"></i>Hizmetler
                        </a>
                    </li>
                    
                    <li>
                        <a asp-controller="Admin" asp-action="Messages" class="flex gap-3 py-3 hover:bg-base-200 rounded-lg transition-all">
                            <i class="fas fa-envelope text-lg"></i>Mesajlar
                        </a>
                    </li>
                    
                    <li>
                        <a asp-controller="Admin" asp-action="SocialMedias" class="flex gap-3 py-3 hover:bg-base-200 rounded-lg transition-all">
                            <i class="fas fa-regular fa-hashtag"></i>Sosyal Medya
                        </a>
                    </li>

                    <li>
                        <a asp-controller="Admin" asp-action="Experiences" class="flex gap-3 py-3 hover:bg-base-200 rounded-lg transition-all">
                            <i class="fas fa-solid fa-star"></i>Deneyimler
                        </a>
                    </li>

                    <li>
                        <a asp-controller="Admin" asp-action="Projects" class="flex gap-3 py-3 hover:bg-base-200 rounded-lg transition-all">
                            <i class="fas fa-solid fa-file"></i>Projeler
                        </a>
                    </li>

                                        <li>
                        <a asp-controller="Admin" asp-action="Sliders" class="flex gap-3 py-3 hover:bg-base-200 rounded-lg transition-all">
                            <i class="fas fa-solid fa-sliders"></i>Slider
                        </a>
                    </li>


                                        <li>
                        <a asp-controller="Admin" asp-action="Menus" class="flex gap-3 py-3 hover:bg-base-200 rounded-lg transition-all">
                            <i class="fas fa-solid fa-bars"></i>Menüler
                        </a>
                    </li>

                            <li>
                        <a asp-controller="Admin" asp-action="Pages" class="flex gap-3 py-3 hover:bg-base-200 rounded-lg transition-all">
                            <i class="fas fa-solid fa-book"></i>Sayfalar
                        </a>
                    </li>

                             <li>
                        <a asp-controller="Admin" asp-action="SiteSettings" class="flex gap-3 py-3 hover:bg-base-200 rounded-lg transition-all">
                            <i class="fas fa-solid fa-book"></i>Site Ayarları
                        </a>
                    </li>

                    <div class="divider"></div>

                    <li>
                        <a asp-controller="Home" asp-action="Index" target="_blank" 
                           class="flex gap-3 py-3 hover:bg-base-200 rounded-lg transition-all">
                            <i class="fas fa-external-link-alt text-lg"></i>
                            Siteyi Görüntüle
                        </a>
                    </li>

                   
            <!-- Alt Profil Alanı -->
            <div class="mt-auto pt-4 border-t">
                <div class="flex items-center justify-between p-3">
                    <div class="flex items-center gap-3">
                        <div class="avatar">
                            <div class="w-10 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2">
                                <img src="https://api.dicebear.com/6.x/initials/svg?seed=@User.FindFirst(ClaimTypes.GivenName)?.Value" />
                            </div>
                        </div>
                        <div>
                            <p class="font-semibold">@User.FindFirst(ClaimTypes.GivenName)?.Value @User.FindFirst(ClaimTypes.Surname)?.Value</p>
                            <p class="text-sm opacity-50">@User.FindFirst(ClaimTypes.Role)?.Value</p>
                        </div>
                    </div>
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="ml-2">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-ghost btn-sm">
                            <i class="fas fa-sign-out-alt"></i>
                        </button>
                    </form>
                </div>
            </div>
        </ul>
    </aside>
                </ul>
            </aside>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>