@model PersonalPortfolio.Models.About

@{
    ViewData["Title"] = "Hakkımda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-24 bg-base-200">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-primary mb-4">Hakkımda</h1>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            @if (!string.IsNullOrEmpty(Model?.ImageUrl))
            {
                <div class="relative">
                    <div class="absolute -inset-4 bg-primary/10 rounded-2xl"></div>
                    <img src="@Model.ImageUrl" alt="@Model.Title" class="relative rounded-xl w-full shadow-xl">
                </div>
            }
            <div class="space-y-6">
                <h2 class="text-3xl font-bold">@Model?.Title</h2>
                <div class="prose max-w-none text-base-content/80">
                    @Html.Raw(Model?.Description)
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.SiteSettings?.CvUrl))
                {
                    <a href="@ViewBag.SiteSettings.CvUrl" class="btn btn-primary">
                        <i class="fas fa-download mr-2"></i>
                        CV'mi İndir
                    </a>
                }
            </div>
        </div>
    </div>
</section>