@model PersonalPortfolio.Models.Projects

@{
    ViewData["Title"] = "Projeyi Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mx-auto px-4 py-8">
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <h2 class="card-title text-2xl mb-6">Projeyi Düzenle</h2>

            <form asp-action="EditProject" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-error"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-control mb-4">
                    <label asp-for="ProjectTitle" class="label">Proje Adı</label>
                    <input asp-for="ProjectTitle" class="input input-bordered w-full" />
                    <span asp-validation-for="ProjectTitle" class="text-error text-sm"></span>
                </div>

                <div class="form-control mb-4">
                    <label asp-for="ProjectDescription" class="label">Proje Açıklaması</label>
                    <textarea asp-for="ProjectDescription" class="textarea textarea-bordered h-24"></textarea>
                    <span asp-validation-for="ProjectDescription" class="text-error text-sm"></span>
                </div>

                <div class="form-control mb-4">
                    <label asp-for="ProjectImageUrl" class="label">Görsel URL</label>
                    <input asp-for="ProjectImageUrl" class="input input-bordered w-full" />
                    <span asp-validation-for="ProjectImageUrl" class="text-error text-sm"></span>
                </div>

                <div class="form-control mb-4">
                    <label asp-for="ProjectUrl" class="label">Proje URL</label>
                    <input asp-for="ProjectUrl" class="input input-bordered w-full" />
                    <span asp-validation-for="ProjectUrl" class="text-error text-sm"></span>
                </div>

                <div class="form-control mb-4">
                    <label asp-for="ProjectGithubUrl" class="label">Github URL</label>
                    <input asp-for="ProjectGithubUrl" class="input input-bordered w-full" />
                    <span asp-validation-for="ProjectGithubUrl" class="text-error text-sm"></span>
                </div>

                <div class="form-control mb-6">
                    <label class="label cursor-pointer">
                        <span class="label-text">Aktif</span>
                        <input type="checkbox" asp-for="IsActive" class="toggle toggle-primary" />
                    </label>
                </div>

                <div class="flex justify-between">
                    <a asp-action="Projects" class="btn btn-ghost">
                        <i class="fas fa-arrow-left mr-2"></i>Geri Dön
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save mr-2"></i>Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}