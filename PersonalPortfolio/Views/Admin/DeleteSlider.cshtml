@model PersonalPortfolio.Models.Sliders
@{
ViewData["Title"] = "Slider Sil";
Layout = "_AdminLayout";
}
<div class="max-w-4xl mx-auto">
    <!-- Başlık Alanı -->
    <div class="flex justify-between items-center mb-6">
        <div class="flex items-center gap-3">
            <div class="bg-error/10 p-3 rounded-lg">
                <i class="fas fa-trash text-error text-xl"></i>
            </div>
            <div>
                <h2 class="text-2xl font-bold text-error">Slider Sil</h2>
                <p class="text-gray-500 text-sm">Bu slider'ı silmek istediğinize emin misiniz?</p>
            </div>
        </div>
    </div>
    <!-- Slider Bilgileri Kartı -->
<div class="card bg-base-100 shadow-xl">
    <div class="card-body">
        <!-- Resim Önizleme -->
        <div class="bg-base-200 rounded-xl overflow-hidden mb-4">
            <img src="@Model.SliderUrl" 
                 alt="Slider Resmi" 
                 class="w-full h-64 object-cover" 
                 onerror="this.src='https://via.placeholder.com/800x400?text=Resim+Bulunamadı'" />
        </div>

        <!-- Slider Detayları -->
        <div class="space-y-4">
            <div class="flex justify-between border-b pb-2">
                <span class="font-semibold">ID</span>
                <span>@Model.Id</span>
            </div>

            <div class="flex justify-between border-b pb-2">
                <span class="font-semibold">Slider Resmi</span>
                <a href="@Model.SliderUrl" target="_blank" class="link link-primary truncate max-w-xs">
                    @Model.SliderUrl
                </a>
            </div>

            <div class="flex justify-between border-b pb-2">
                <span class="font-semibold">Slider Başlığı</span>
                <span>@Model.SliderTitle</span>
            </div>

            <div class="flex justify-between border-b pb-2">
                <span class="font-semibold">Durum</span>
                <span class="@(Model.IsActive ? "text-success" : "text-error")">
                    @(Model.IsActive ? "Aktif" : "Pasif")
                </span>
            </div>
        </div>

        <!-- Silme Formu -->
        <form asp-action="DeleteSlider" method="post" class="mt-6">
            <input type="hidden" asp-for="Id" />
            
            <div class="flex gap-4">
                <a asp-action="Sliders" class="btn btn-ghost flex-1">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Listeye Dön
                </a>
                <button type="submit" class="btn btn-error flex-1">
                    <i class="fas fa-trash mr-2"></i>
                    Slider'ı Sil
                </button>
            </div>
        </form>
    </div>
</div>
</div>