@model PersonalPortfolio.Models.Pages

@{
    ViewData["Title"] = "Sayfa Sil";
    Layout = "_AdminLayout";
}

<div class="container mx-auto px-4 py-8">
    <h2 class="text-2xl font-bold text-red-600 mb-6">
        <i class="fas fa-trash mr-2"></i>Sayfa Sil
    </h2>

    <div class="card bg-base-100 shadow-lg p-6">
        <p class="text-lg">Bu sayfayı silmek istediğinize emin misiniz?</p>
        <h3 class="text-xl font-bold text-gray-700 mt-4">@Model.PageTitle</h3>
        <p class="text-gray-500">@Model.PageSlug</p>

        <form asp-action="DeletePage" method="post" class="mt-6">
            <input type="hidden" asp-for="Id" />
            <div class="flex justify-end gap-2">
                <a asp-action="Index" class="btn btn-ghost">İptal</a>
                <button type="submit" class="btn btn-error">Sil</button>
            </div>
        </form>
    </div>
</div>
