@model PersonalPortfolio.Models.Menus

@{

    ViewData
[
"Title"
]
 
=
 
"Menü Sil"
;

    Layout 
=
 
"_AdminLayout"
;

}


<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Menü Sil</h3>
        </div>
        <div class="card-body">
            <h5>Bu menüyü silmek istediğinizden emin misiniz?</h5>
            <dl class="row">
                <dt class="col-sm-2">Menü Başlığı:</dt>
                <dd class="col-sm-10">@Model.MenuTitle</dd>
                <dt class="col-sm-2">Menü Linki:</dt>
                <dd class="col-sm-10">@Model.MenuLink</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="DeleteMenu" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Sil</button>
                <a asp-action="Menus" class="btn btn-default">İptal</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    
@{
await
 Html
.
RenderPartialAsync
(
"_ValidationScriptsPartial"
)
;
}

}